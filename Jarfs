        .button {
            display: inline-block;
            padding: 15px 30px;
            background-color: #e74c3c; /* لون الزر الأحمر */
            color: white; /* لون النص */
            text-align: center;
            text-decoration: none;
            border-radius: 5px;
            font-size: 18px;
            transition: background-color 0.3s;
        }

        .button:hover {
            background-color: #c0392b; /* لون مختلف عند مرور الفأرة */
        }

        /* إعدادات لجعل الزر في المنتصف */
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* يجعل الصفحة في وسط الشاشة */
            margin: 0;
        }
    </style>
